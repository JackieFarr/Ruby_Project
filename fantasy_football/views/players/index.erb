<h1>These are the players</h1>

<p class="btn--wrapper">
  <a class="btn btn--action" href="/players/new">Add a player</a>
</p>

<table>
  <tr>
    <th>First name</th>
    <th>Last Name</th>
    <th>Team</th>
    <th>Position</th>
    <th>Salary</th>
    <th>Injury</th>
    <th>Goals</th>
  </tr>
  <% for player in @players %>
  <tr>
      <td><%= player.first_name%></td>
      <td><%= player.last_name%></td>
      <td> <%= player.team_id %></td>
      <td> <%= player.position %></td>
      <td> <%= player.salary %></td>
      <td> <%= player.injury %></td>
      <td> <%= player.goals %></td>
  </tr>
  <% end %>
</table>
